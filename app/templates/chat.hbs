<h3>Chat interface</h3>

{{#bf-row}}
  {{#bf-col}}
    {{#bf-box title="Login" color="success"}}
      <form {{action "addUser" on="submit"}}>
        <div class="box-body">
          <div class="form-group">
            <label for="name">Name</label>
            {{input value=name id="name" class="form-control" placeholder="Enter name"}}
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            {{input type="email" value=email id="email" class="form-control" placeholder="Enter email"}}
          </div>
        </div>
        <div class="box-footer">
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </form>
    {{/bf-box}}
    {{#bf-box title="Latest users" label=usersLabel color="primary"}}
      <div class="box-body no-padding">
        <ul class="users-list clearfix">
          {{#each user in users}}
            <li>
              <img src="{{user.image}}" class="img-thumbnail">
              <a class="users-list-name">{{user.name}}</a>
            </li>
          {{/each}}
        </ul>
      </div>
    {{/bf-box}}
  {{/bf-col}}
  {{#bf-col}}
    {{bf-chat chats=chats currentUser=currentUser action="sendMessage"}}
  {{/bf-col}}
{{/bf-row}}
